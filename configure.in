#                                               -*- Autoconf -*-
# Process this file with autoconf to produce a configure script.

AC_PREREQ(2.59)
AC_INIT(enblend, 0.9, [mihal@eecs.berkeley.edu])
AC_CONFIG_SRCDIR([src/blend.cc])
AM_INIT_AUTOMAKE
AC_CONFIG_HEADER([config.h])

# Checks for programs.
AC_PROG_CXX
AC_PROG_CC
#CXXFLAGS = 

# Checks for libraries.
AC_CHECK_LIB(tiff,TIFFOpen,,AC_MSG_ERROR([libtiff is required to compile enblend.]),[-ljpeg -lz -lm])

# Checks for header files.
AC_HEADER_STDC
AC_CHECK_HEADERS([stdlib.h string.h])
AC_CHECK_HEADER(tiffio.h,,AC_MSG_ERROR([libtiff-devel header files are required to compile enblend.]))

# Checks for typedefs, structures, and compiler characteristics.
AC_HEADER_STDBOOL
AC_C_CONST
AC_C_INLINE
AC_TYPE_SIZE_T

# Checks for library functions.
AC_FUNC_MALLOC
AC_FUNC_STRTOD
AC_CHECK_FUNCS([memset rint strchr strrchr])

AC_CONFIG_FILES([Makefile
                 demo/Makefile
                 doc/Makefile
                 src/Makefile])
AC_OUTPUT
